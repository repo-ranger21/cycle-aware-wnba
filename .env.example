# Q4Trackr Environment Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
PORT=3000
NODE_ENV=development

# Satirical Data Configuration (for demo purposes)
MOCK_DATA_SEED=42
SATIRICAL_MODE=true

# Ethical Compliance Settings
ENABLE_ETHICAL_NOTICES=true
PRIVACY_FIRST_MODE=true

# API Configuration
API_RATE_LIMIT=100
ENABLE_CORS=true

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security Headers
ENABLE_HELMET=true
TRUST_PROXY=false